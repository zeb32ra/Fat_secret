<UserControl x:Class="Fat_Secret.Icon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fat_Secret"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" Margin="5,5,5,5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="icon_text" Text="TextBlock" Grid.Row="0" HorizontalAlignment="Center"/>
        <Button x:Name="pic_but" Grid.Row="1" Width="90px" Height="90px" Click="pic_but_Click">
            <Button.Background>
                <ImageBrush x:Name="pic" ImageSource="/Images/empty3.png"/>
            </Button.Background>
        </Button>


    </Grid>
</UserControl>
